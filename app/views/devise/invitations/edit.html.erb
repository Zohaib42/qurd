<%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, class: 'form-signin login-screen' }) do |f| %>
  <div class="login-logo">Quadio</div>

  <%= render 'shared/error', object: resource %>

  <%= f.hidden_field :invitation_token, readonly: true %>
  <h1 class="h3 mb-3 font-weight-normal text-center"><%= t "devise.invitations.edit.header" %></h1>

  <% if f.object.class.require_password_on_accepting %>
    <div class="checkbox mb-3">
      <label for="inputEmail" class="sr-only">Password</label>
      <%= f.password_field :password, class: 'form-control', required: true %>
    </div>

    <div class="checkbox mb-3">
      <label for="inputEmail" class="sr-only">Password Confirmation</label>
      <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('devise.invitations.edit.submit_button'), class: 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>
