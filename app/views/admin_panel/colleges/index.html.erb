<div class="row">
  <div class="container-fluid">
    <div class="search-bar">
      <div class="top-heading">
        <h1>Colleges</h1>
        <h6 class="mt-0">View and edit Colleges</h6>
      </div>

      <div class="search-section d-none">
        <%= form_with url: admin_panel_colleges_path, method: :get, local: true do |f| %>
          <%= f.text_field :term, id: :term, value: params[:term], class: 'form-control', placeholder: 'search' %>
          <div class="icon">
            <i class="fas fa-search"></i>
          </div>
        <% end %>
      </div>

      <div class="d-flex justify-content-end">
        <%= link_to 'Create New College',  [:new, :admin_panel, :college], { class: 'btn btn-primary', remote: true } %>
      </div>
    </div>
  </div>
</div>

<table class="table table-borderless table-hover">
  <thead>
    <tr>
      <th>College Name</th>
      <th>Domain</th>
      <th>Action(s)</th>
    </tr>
  </thead>
  <tbody>
    <% @colleges.each do |college| %>
      <tr>
        <td><%= college.name %></td>
        <td><%= domain_display(college) %></td>
        <td class="icon">
          <%= link_to [:edit, :admin_panel, college], remote: true, class: 'ml-1 mr-1', data: { toggle: 'tooltip' }, title: 'Edit College' do %>
            <i class="fas fa-edit"></i>
          <% end %>

          <%= link_to [:admin_panel, college], method: :delete, class: 'ml-1 mr-1', data: { confirm: 'Are you sure?, you want to delete this college?', toggle: 'tooltip' }, title: 'Delete College' do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @colleges %>

<div id='college-modal'></div>
