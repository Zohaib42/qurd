<div class="row">
  <div class="container-fluid">
    <div class="search-bar">
      <div class="top-heading">
        <h1>Events</h1>
        <h6 class="mt-0">View and edit Events</h6>
      </div>
      <div class="d-flex justify-content-end">
        <%= link_to 'Create Event', new_admin_panel_event_path, remote: true, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>

<ul class="nav nav-pills mb-4 mt-3" id="events-tab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="upcoming-events-tab" data-toggle="pill" href="#upcoming-events" role="tab" aria-controls="upcoming-events" aria-selected="true">Upcoming</a>
  </li>

  <li class="nav-item">
    <a class="nav-link" id="historical-events-tab" data-toggle="pill" href="#historical-events" role="tab" aria-controls="historical-events" aria-selected="false">Historical</a>
  </li>
</ul>

<div class="tab-content" id="events-tabContent">
  <div class="tab-pane fade show active" id="upcoming-events" role="tabpanel" aria-labelledby="upcoming-events-tab">
    <%= render 'admin_panel/events/upcoming', events: @upcoming_events %>
  </div>

  <div class="tab-pane fade" id="historical-events" role="tabpanel" aria-labelledby="historical-events-tab">
    <%= render 'admin_panel/events/historical', events: @historical_events %>
  </div>
</div>

<div class="modal fade" id="event-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true"></div>
