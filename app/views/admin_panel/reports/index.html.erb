<div class="row">
  <div class="container-fluid">
    <div class="search-bar">
      <div class="top-heading">
        <h1>Reports</h1>
        <h6 class="mt-0">All reports on the Platform</h6>
      </div>
    </div>
  </div>
</div>

<ul class="nav nav-pills mb-4 mt-3" id="reports-tab" role="tablist">
  <li class="nav-item">
    <a class="nav-link <%= active_report_tab?('post_reports_tab', params[:back_to_tab], 'link') %>" id="post-reports-tab" data-toggle="pill" href="#post-reports" role="tab" aria-controls="post-reports" aria-selected="true">Post Reports</a>
  </li>

  <li class="nav-item">
    <a class="nav-link <%= active_report_tab?('user_reports_tab', params[:back_to_tab], 'link') %>" id="user-reports-tab" data-toggle="pill" href="#user-reports" role="tab" aria-controls="user-reports" aria-selected="false">User Reports</a>
  </li>
</ul>

<div class="tab-content" id="reports-tabContent">
  <div class="tab-pane fade <%= active_report_tab?('post_reports_tab', params[:back_to_tab], 'tab') %>" id="post-reports" role="tabpanel" aria-labelledby="post-reports-tab">
    <%= render 'admin_panel/reports/post_reports', post_reports: @post_reports %>
  </div>

  <div class="tab-pane fade <%= active_report_tab?('user_reports_tab', params[:back_to_tab], 'tab') %>" id="user-reports" role="tabpanel" aria-labelledby="user-reports-tab">
    <%= render 'admin_panel/reports/member_reports', member_reports: @member_reports %>
  </div>
</div>
