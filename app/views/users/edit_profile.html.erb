<div class="container-fluid mt-4">
  <h4 class="mb-3"><%= t('custom.pages.user.edit.heading') %></h4>
  <%= form_with(scope: :user, url: update_profile_user_path, id: 'user_form') do |form| %>
    <div class="form-row">
      <div class="form-group col-6">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, class: 'form-control', placeholder: true %>
      </div>
      <div class="form-group col-6">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, class: 'form-control', placeholder: true %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :bio %>
      <%= form.text_area :bio, class: 'form-control', placeholder: true %>
    </div>
    <div class="form-group">
      <%= form.label :avatar %>
      <%= form.file_field :avatar, class: 'form-control', placeholder: true %>
    </div>
    <hr class="mt-4 mb-4"/>
    <div class="text-left">
      <%= link_to t('custom.buttons.back'), root_path, class: 'btn btn-outline-primary' %>
      <%= form.submit t('custom.pages.user.edit.submit'), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
