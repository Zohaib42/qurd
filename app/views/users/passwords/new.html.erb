<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: 'form-signin login-screen', method: :post }) do |f| %>
  <div class="login-logo">Quadio</div>
  <%= render 'shared/error', object: resource %>

  <div class="checkbox mb-3">
    <label for="inputEmail" class="sr-only">Email address</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'btn btn-primary' %>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= render "users/shared/links" %>
  </div>
<% end %>
